<%= form_with(model: @clap_registration_form, url: claps_path, local: true) do |f| %>
  <table class="table">
    <thead>
    <tr>
      <th width="60px">登録</th>
      <th>ユーザーID</th>
      <th>投稿ID</th>
    </tr>
    </thead>
    <tbody class="bulk-registration-form">

    <%= f.fields_for :claps do |ff| %>
      <tr class="item">
        <td class="text-center">
          <%= ff.check_box :register %>
        </td>
        <td>
          <%= ff.number_field :user_id, class: 'form-control' %>
        </td>
        <td>
          <%= ff.number_field :post_id, class: 'form-control' %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>

  <div class="text-center">
    <%= f.submit '一括登録', class: 'btn btn-primary' %>
  </div>
<% end %>
